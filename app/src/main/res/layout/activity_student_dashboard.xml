<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title Row with Logout Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Title Text -->
                <TextView
                    android:id="@+id/tvStudentTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŽ“ My Attendance Dashboard"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#007BB5" />

                <!-- Logout Button -->
                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textSize="14sp"
                    android:backgroundTint="#FF5252"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />
            </LinearLayout>


            <!-- Date Range -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvFromDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:background="@drawable/bg_input"
                    android:text="From Date"
                    android:textColor="#000" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvToDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:background="@drawable/bg_input"
                    android:text="To Date"
                    android:textColor="#000" />
            </LinearLayout>

            <!-- Subject & Day Filters -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Spinner
                    android:id="@+id/spinnerSubject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner"
                    android:padding="8dp" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinnerDay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Search Button -->
            <Button
                android:id="@+id/btnFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ” Filter Attendance"
                android:backgroundTint="#00A0E2"
                android:textColor="#FFF"
                android:layout_marginBottom="16dp" />

            <!-- Table Title -->
            <TextView
                android:id="@+id/tvAttendanceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Attendance Records"
                android:textStyle="bold"
                android:textColor="#FFC107"
                android:layout_marginBottom="8dp" />

            <!-- Attendance Table -->
            <TableLayout
                android:id="@+id/tableAttendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="@android:color/white"
                android:padding="4dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDD"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Progress Section -->
            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ˆ Progress by Subject"
                android:textStyle="bold"
                android:textColor="#FFC107"
                android:layout_marginBottom="8dp" />

            <!-- Replace progressContainer contents with PieChart -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/teacher_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="#FFFFFF"
        app:menu="@menu/nav_settings"
        app:itemTextColor="@color/nav_text_color"
        app:itemBackground="@drawable/nav_item_background"
        app:headerLayout="@layout/drawer_header" />
</androidx.drawerlayout.widget.DrawerLayout>
