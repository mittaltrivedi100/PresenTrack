<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- Title Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/dashboardToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFBB00"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp">

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendance History"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:paddingStart="16dp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Main Content Scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Timetable Spinner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Timetable"
                android:textStyle="bold"
                android:textColor="#333" />
            <Spinner
                android:id="@+id/spinnerTimetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/editbox_background_normal"
                android:padding="4dp" />

            <!-- Lecture Spinner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Lecture"
                android:textStyle="bold"
                android:textColor="#333" />
            <Spinner
                android:id="@+id/spinnerLecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/editbox_background_normal"
                android:padding="4dp" />

            <!-- Student Spinner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Student"
                android:textStyle="bold"
                android:textColor="#333" />
            <Spinner
                android:id="@+id/spinnerStudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/editbox_background_normal"
                android:padding="4dp" />

            <!-- From Date -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From Date"
                android:textStyle="bold"
                android:textColor="#333" />
            <TextView
                android:id="@+id/tvFromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Select From Date"
                android:textColor="#000"
                android:background="@drawable/bg_date_selector"
                android:layout_marginBottom="16dp" />

            <!-- To Date -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Date"
                android:textStyle="bold"
                android:textColor="#333" />
            <TextView
                android:id="@+id/tvToDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Select To Date"
                android:textColor="#000"
                android:background="@drawable/bg_date_selector"
                android:layout_marginBottom="24dp" />

            <!-- Search Button -->
            <Button
                android:id="@+id/btnSearchAttendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="#fff"
                android:backgroundTint="#00A0E2"
                android:layout_marginBottom="16dp" />

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerAttendanceHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
